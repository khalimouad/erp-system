<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">prism.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="PRISM" string="PRISM" data-key="prism_core">
                    <h2>Company Information</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Company Details</span>
                                <div class="text-muted">
                                    Configure your company information
                                </div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="company_name" class="col-lg-3 o_light_label"/>
                                        <field name="company_name"/>
                                    </div>
                                    <div class="mt16 row">
                                        <label for="company_tax_id" class="col-lg-3 o_light_label"/>
                                        <field name="company_tax_id"/>
                                    </div>
                                    <div class="mt16 row">
                                        <label for="company_rc_number" class="col-lg-3 o_light_label"/>
                                        <field name="company_rc_number"/>
                                    </div>
                                    <div class="mt16 row">
                                        <label for="company_cnss_number" class="col-lg-3 o_light_label"/>
                                        <field name="company_cnss_number"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <h2>Modules</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_prism_company"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_prism_company"/>
                                <div class="text-muted">
                                    Manage company information and structure
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_prism_user"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_prism_user"/>
                                <div class="text-muted">
                                    Manage users, roles and departments
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_prism_partner"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_prism_partner"/>
                                <div class="text-muted">
                                    Manage customers and vendors
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_prism_product"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_prism_product"/>
                                <div class="text-muted">
                                    Manage products and services
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_prism_sales"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_prism_sales"/>
                                <div class="text-muted">
                                    Manage sales orders and invoices
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_prism_purchase"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_prism_purchase"/>
                                <div class="text-muted">
                                    Manage purchase orders and vendor bills
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_prism_inventory"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_prism_inventory"/>
                                <div class="text-muted">
                                    Manage inventory and warehouses
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_prism_accounting"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_prism_accounting"/>
                                <div class="text-muted">
                                    Manage accounting and financial reports
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_prism_tax"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_prism_tax"/>
                                <div class="text-muted">
                                    Manage taxes and fiscal declarations
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_prism_payroll"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_prism_payroll"/>
                                <div class="text-muted">
                                    Manage payroll and employee benefits
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence for Bon de Livraison (BL) numbers -->
        <record id="seq_sale_order_bl" model="ir.sequence">
            <field name="name">Bon de Livraison</field>
            <field name="code">sale.order.bl</field>
            <field name="prefix">BL/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>

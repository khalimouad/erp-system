<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Tax Declaration Sequence -->
        <record id="seq_tax_declaration" model="ir.sequence">
            <field name="name">Tax Declaration</field>
            <field name="code">tax.declaration</field>
            <field name="prefix">TAX/%(year)s/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>
        
        <!-- Tax Report Sequence -->
        <record id="seq_tax_report" model="ir.sequence">
            <field name="name">Tax Report</field>
            <field name="code">tax.report</field>
            <field name="prefix">REP/%(year)s/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>

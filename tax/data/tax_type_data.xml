<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Moroccan Tax Types -->
        <record id="tax_type_tva" model="tax.type">
            <field name="name">TVA (Value Added Tax)</field>
            <field name="code">TVA</field>
            <field name="description">Taxe sur la Valeur Ajoutée (TVA) is the Moroccan value-added tax applied to most goods and services.</field>
            <field name="sequence">10</field>
            <field name="is_moroccan_tax">True</field>
            <field name="moroccan_tax_category">tva</field>
        </record>
        
        <record id="tax_type_is" model="tax.type">
            <field name="name">IS (Corporate Tax)</field>
            <field name="code">IS</field>
            <field name="description">Impôt sur les Sociétés (IS) is the Moroccan corporate income tax applied to companies.</field>
            <field name="sequence">20</field>
            <field name="is_moroccan_tax">True</field>
            <field name="moroccan_tax_category">is</field>
        </record>
        
        <record id="tax_type_ir" model="tax.type">
            <field name="name">IR (Income Tax)</field>
            <field name="code">IR</field>
            <field name="description">Impôt sur le Revenu (IR) is the Moroccan personal income tax applied to individuals.</field>
            <field name="sequence">30</field>
            <field name="is_moroccan_tax">True</field>
            <field name="moroccan_tax_category">ir</field>
        </record>
        
        <record id="tax_type_droits_enregistrement" model="tax.type">
            <field name="name">Droits d'Enregistrement (Registration Fees)</field>
            <field name="code">DE</field>
            <field name="description">Droits d'Enregistrement are registration fees applied to various legal documents and transactions in Morocco.</field>
            <field name="sequence">40</field>
            <field name="is_moroccan_tax">True</field>
            <field name="moroccan_tax_category">droits</field>
        </record>
        
        <record id="tax_type_droits_timbre" model="tax.type">
            <field name="name">Droits de Timbre (Stamp Duty)</field>
            <field name="code">DT</field>
            <field name="description">Droits de Timbre are stamp duties applied to various documents and transactions in Morocco.</field>
            <field name="sequence">50</field>
            <field name="is_moroccan_tax">True</field>
            <field name="moroccan_tax_category">timbre</field>
        </record>
        
        <record id="tax_type_taxe_professionnelle" model="tax.type">
            <field name="name">Taxe Professionnelle (Professional Tax)</field>
            <field name="code">TP</field>
            <field name="description">Taxe Professionnelle is a local business tax applied to professional activities in Morocco.</field>
            <field name="sequence">60</field>
            <field name="is_moroccan_tax">True</field>
            <field name="moroccan_tax_category">taxe_professionnelle</field>
        </record>
        
        <!-- Generic Tax Types -->
        <record id="tax_type_sales_tax" model="tax.type">
            <field name="name">Sales Tax</field>
            <field name="code">SALES</field>
            <field name="description">General sales tax applied to retail sales.</field>
            <field name="sequence">100</field>
            <field name="is_moroccan_tax">False</field>
        </record>
        
        <record id="tax_type_withholding" model="tax.type">
            <field name="name">Withholding Tax</field>
            <field name="code">WHT</field>
            <field name="description">Tax withheld from payments made to suppliers or service providers.</field>
            <field name="sequence">110</field>
            <field name="is_moroccan_tax">False</field>
        </record>
        
        <record id="tax_type_customs_duty" model="tax.type">
            <field name="name">Customs Duty</field>
            <field name="code">CUST</field>
            <field name="description">Tax applied to imported goods.</field>
            <field name="sequence">120</field>
            <field name="is_moroccan_tax">False</field>
        </record>
    </data>
</odoo>
